<div class="row">
  <article class="section">
    <h2>故障情報</h2>
      <div class="">
        <a href=/troubles/<%= @trouble.id %>/edit class="btn btn-default"> 編集する</a>
      </div>
    <table class="table table-borderd">
    <thead>
      <tr><th class="col-md-4"></th><th class="col-md-8"></th></tr>
    </thead>
      <tbody>
        <tr><td>故障ID</td><td><%= @trouble.id %></td></tr>
        <tr><td>影響ユーザ数</td><td><%= @trouble.user_num %><td></td></tr>
        <tr><td>対象機器</td><td><%= @trouble.vm_name %></td></tr>
        <tr><td>発生日時</td><td><%= @trouble.trbl_start %></td></tr>
        <tr><td>回復日時</td><td><%= @trouble.trbl_end %></td></tr>
        <tr><td>概要</td><td><%=@trouble.about %></td></tr>
      </tbody>
    </table>
  </article>
  <hr>
  <article>
    <div>
      <h4>コメント</h4>
      <a href="/troubles/<%= @trouble.id %>/comments/new" class="btn btn-primary">新規投稿</a>
      <br><br>
      <% if @comments.empty? then %>
        <p>コメントはありません</p>
      <% else %>
        <% @comments.each do |comment| %>
          <table class="table table-bordered">
            <thead>
            <tr>
              <td class="col-md-7">
                ユーザ<%= comment.user_id %>
              </td>
              <td class="col-md-5">
                <%= comment.created_at %>投稿 ( <%= comment.updated_at %> 更新 )
                <a href="/comments/<%= comment.id %>/edit" class="">編集</a></td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="2">
                  <%= comment.comment %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>
  </article>
</div>