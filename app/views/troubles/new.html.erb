<div class='row'>
  <article class="section">
    <div class="container">
      <header class="header header--section">
        <h2 class="text-middle">
          <i class="icon-movie color-gray-light"></i>
          故障情報登録
        </h2>
      </header>
      <%= form_for @trouble do |f| %>
      <div style="margin: 8px 0">
        <%= f.label :影響ユーザ数, style: { 'margin-right' => 8 } %>
        <%= f.number_field :user_num, placeholder: '影響ユーザ数', value: 1, max: 150, min: 0, html: { class: "search__query", style: 'text-align: right;' } %>
        <%= f.text_area :vm_name, placeholder: 'VM名', style: 'width: 100%' %>
      </div>
      <div style="margin: 8px 0">
        <%= f.text_area :about, placeholder: '概要', style: 'width: 100%;height: 300px;' %>
      </div>
      <div>
        <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn--block" do %>
            投稿する<i class="icon-arrow-right"></i>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </article>
</div>