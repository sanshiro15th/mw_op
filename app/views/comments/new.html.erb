<div class='row'>
  <article class="section">
    <div class="container">
      <header class="header header--section">
        <h2 class="text-middle">
          <i class="icon-movie color-gray-light"></i>
          コメント投稿
        </h2>
      </header>
      <%= form_for([@trouble, @comment]) do |f| %>

      <div style="margin: 8px 0">
        <%= f.text_area :comment, placeholder: 'コメントを入力', style: 'width: 100%;height: 300px;' %>
      </div>
      <div>
        <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn--block" do %>
            投稿する<i class="icon-arrow-right"></i>
          <% end %>
        </div>
      </div>

      <% end %>
    </div>
  </article>
</div>